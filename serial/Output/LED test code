#include <Stepper.h>
#include <Adafruit_NeoPixel.h>
#define LED_COUNT1 11
#define LED_COUNT2 8
#define BRIGHTNESS 255

int BUZZER = 4;
int LED_PIN1=5;
int LED_PIN2=6;
int sleep;
int tones[]={261,277,311};

Adafruit_NeoPixel strip1(LED_COUNT1, LED_PIN1, NEO_GRB + NEO_KHZ800);
Adafruit_NeoPixel strip2(LED_COUNT2, LED_PIN2, NEO_GRB + NEO_KHZ800);

void setup() {
  // put your setup code here, to run once:
  Serial.begin(115200);
  
  strip1.begin();
  strip1.setBrightness(BRIGHTNESS);
  strip1.show();
  strip2.begin();
  strip2.setBrightness(BRIGHTNESS);
  strip2.show();

  pinMode(BUZZER,OUTPUT);
  //pinMode(MOTOR,OUTPUT);

}

void loop() {
  while (Serial.available()){
    char c = Serial.read();
    Serial.println(c);

    if(c == '1'){
      for (int i = 0; i < LED_COUNT1; i++) {
        strip1.setPixelColor(i, 180, 180, 180);
      }
      strip1.show();

      for (int i = 0; i < LED_COUNT2; i++) {
        strip2.setPixelColor(i, 180, 180, 180);
      }
      strip2.show();

      tone(BUZZER,tones[0]);
      }

    }
    
    else {
      noTone(BUZZER);
      for (int i = 0; i < LED_COUNT1; i++) {
        strip1.setPixelColor(i, 0, 0, 0);
      }
      strip1.show();

      for (int i = 0; i < LED_COUNT2; i++) {
        strip2.setPixelColor(i, 0, 0, 0);
      }
      strip2.show();
    }
  }
}
